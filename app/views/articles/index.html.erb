<h1 align="center">Copypaster blog</h1>

<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @articles.each do |article| %>
        <div class="col-xs-12">
          <div class="text-center">
            <h2><%= article.title %></h2>
            <h6><%= article.created_at.strftime('%b %d, %Y') %></h6>
          </div>
          <div>
            <%= raw(article.text).truncate(358) %>
          </div>
          <div class="text-center">
            <%= link_to article_path(article) do %>
                Read more
                <span class="badge">
                    <%= pluralize(article.likes_count, 'like') %>
                </span>
            <% end %>
          </div>
          <br>
        </div>
    <% end %>
  </div>
</div>

<div>
  <%= paginate @articles, :theme => 'twitter-bootstrap-3' %>
</div>
